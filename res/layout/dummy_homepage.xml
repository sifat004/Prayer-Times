<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"


    xmlns:android="http://schemas.android.com/apk/res/android">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignBottom="@+id/running_text_layout"

            android:id="@+id/background_image_layout"


            android:orientation="vertical">

            <ImageView
                android:id="@+id/background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:alpha=".7"
                android:scaleType="centerCrop"
                android:src="@drawable/masjid4"

                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fab_bar"
            android:layout_marginTop="5dp"

            >
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fabSize="mini"
                app:backgroundTint="#51000000"
                app:layout_anchor="@+id/container"
                android:src="@drawable/menu"

                android:layout_margin="2dp"



                />




            <LinearLayout
                android:id="@+id/linearLayout_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/fab_menu"
                android:gravity="right"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:orientation="horizontal"
                    >


                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/fab_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:fabSize="mini"
                        app:backgroundTint="#51000000"
                        app:layout_anchor="@+id/container"
                        android:src="@drawable/share_ic"
                        app:useCompatPadding="false"
                        android:layout_margin="2dp"



                        />


                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/fab_qibla"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/qibla_compass_icon"
                        app:backgroundTint="#51000000"
                        app:fabSize="mini"
                        android:layout_margin="2dp"

                        app:useCompatPadding="false"


                        />

                    <!--<android.support.design.widget.FloatingActionButton-->
                        <!--android:id="@+id/fab_cal"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:src="@drawable/calendar_1024"-->
                        <!--app:backgroundTint="#51000000"-->
                        <!--app:fabSize="mini"-->
                        <!--android:layout_margin="2dp"-->


                        <!--app:useCompatPadding="false"-->


                        <!--/>-->

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/fab_tasbih"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/hand_counter_icon"
                        app:backgroundTint="#51000000"
                        app:fabSize="mini"
                        app:useCompatPadding="false"
                        android:layout_margin="2dp"


                        />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/fab_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/location_icon"
                        app:backgroundTint="#51000000"
                        app:fabSize="mini"
                        app:useCompatPadding="false"
                        android:layout_margin="2dp"


                        />



                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/header_info_layout"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/fab_bar"
            >


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:alpha="1"
                android:orientation="horizontal"
                android:weightSum="2.2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:orientation="vertical">


                    <LinearLayout
                        android:id="@+id/l1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/customrectangle"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="3.5">

                        <TextView
                            android:id="@+id/sehri_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginLeft="1dp"
                            android:layout_weight="2.1"
                            android:text="সুবহে সাদিক"

                            android:textColor="#FFF"
                            android:textSize="@dimen/subh_sadik_text_size"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"


                            />

                        <TextView
                            android:id="@+id/sehri_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginRight="1dp"
                            android:layout_marginLeft="1dp"
                            android:layout_weight="0.9"

                            android:text=""
                            android:textColor="#FFF"
                            android:textSize="@dimen/subh_sadik_text_size"

                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"

                            />

                        <ImageButton
                            android:id="@+id/sehri_alarm"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"

                            android:layout_height="match_parent"
                            android:scaleType="centerInside"

                            android:layout_centerVertical="true"
                            android:src="@drawable/alarm_off"
                            android:background="#00ffffff"

                            />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/l2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/customrectangle"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="3.5">

                        <TextView
                            android:id="@+id/iftar_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginLeft="1dp"
                            android:layout_weight="2.1"
                            android:text="সূর্যাস্ত"
                            android:textColor="#FFF"
                            android:textSize="@dimen/subh_sadik_text_size"

                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            />

                        <TextView
                            android:id="@+id/iftar_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginRight="1dp"
                            android:layout_marginLeft="1dp"
                            android:layout_weight="0.9"

                            android:text=""
                            android:textColor="#FFF"
                            android:textSize="@dimen/subh_sadik_text_size"

                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            />

                        <ImageButton
                            android:id="@+id/iftar_alarm"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"

                            android:layout_height="match_parent"

                            android:layout_centerVertical="true"
                            android:src="@drawable/alarm_off"
                            android:background="#00ffffff"
                            android:scaleType="centerInside"



                            />


                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/ic_location_on_white_24dp" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"


                            android:text="Bangladesh"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#fff"
                            android:textSize="@dimen/location_text_size" />


                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"


                    android:background="#80ffffff">

                </View>

                <LinearLayout
                    android:id="@+id/frameLayout"
                    android:layout_width="0dp"

                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:alpha="1"
                    android:background="@drawable/customboarder"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/hijri_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceMedium"

                        android:textColor="#fff"

                        android:textSize="14sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"

                        android:layout_marginTop="2dp"
                        android:background="#fff">

                    </View>


                    <TextView
                        android:id="@+id/next_salat_head"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="পরবর্তী সালাত"
                        android:textAppearance="?android:attr/textAppearanceMedium"

                        android:textColor="#fff"

                        android:textSize="@dimen/next_salat_text_size" />


                    <TextView
                        android:id="@+id/next_salat_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Salat name"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#fff"
                        android:textSize="@dimen/next_salat_text_size"
                        />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"

                        android:layout_marginTop="2dp"
                        android:background="#fff">

                    </View>

                    <TextView
                        android:id="@+id/next_salat_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:alpha="1"
                        android:gravity="center"
                        android:text="Salat Time"
                        android:textColor="#fff"

                        android:textAlignment="center"


                        android:textSize="@dimen/next_salat_text_size" />

                    <TextView
                        android:id="@+id/next_salat_time_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:alpha="1"
                        android:gravity="center"
                        android:text="Salat Time"
                        android:textColor="#fff"


                        android:visibility="gone"
                        android:textSize="@dimen/next_salat_text_size" />


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/running_text_layout"
            android:layout_below="@+id/header_info_layout"

            >






            <TextView
                android:id="@+id/current_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:gravity="center"
                android:padding="1dp"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#fff"
                android:textSize="16sp"


                />

        </LinearLayout>



            <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="5dp"-->
                <!--android:id="@+id/divider"-->

                <!--&gt;-->

            <!--</View>-->


        <android.support.v7.widget.RecyclerView

                android:id="@+id/prayer_time_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="#fff"
                android:footerDividersEnabled="true"
                android:layout_above="@+id/adView"
                android:layout_below="@+id/background_image_layout"
                android:headerDividersEnabled="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="1dp"
                android:paddingBottom="5dp"
                android:scrollbarStyle="outsideOverlay">

        </android.support.v7.widget.RecyclerView>



        <!--<LinearLayout-->
        <!--android:id="@+id/banner_container"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:orientation="vertical"-->
        <!--/>-->

        <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#000"
            ads:adSize="SMART_BANNER"
            ads:adUnitId="@string/banner">

        </com.google.android.gms.ads.AdView>

    </RelativeLayout>


